<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-key"></i>修改密码</h3>
    </div>
    <div class="panel-body">
        <form id="form-password" action="/user/editpassword" method="post" class="form-horizontal">
            <div class="modal-body">
                <div class="form-group">
                    <label for="Type" class="control-label col-lg-3">原密码</label>
                    <div class="col-lg-8">
                        <input type="password" name="oldPassword" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="Type" class="control-label col-lg-3">新密码</label>
                    <div class="col-lg-8">
                        <input type="password" name="newPassword" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="Type" class="control-label col-lg-3">确认密码</label>
                    <div class="col-lg-8">
                        <input type="password" name="rePassword" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-lg-8 col-lg-offset-3">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i> 确定</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $(function () {
        $("#form-password").registerSubmit(function () {
            $.closeWindow();
            $.loadMain();
        });
    });
</script>
