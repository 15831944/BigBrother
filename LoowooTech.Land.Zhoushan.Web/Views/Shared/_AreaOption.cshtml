@model Area
@{
    int areaId = ViewBag.AreaID == null ? 0 : ViewBag.AreaID;
    Model.Selected = Model.ID == areaId;
}
<option value="@(Model.ID)" @(Model.Selected ? " selected" : null)>
    @(new string('-', Model.Level))
    @(Model.Name)
</option>
@foreach (var child in Model.Children)
{
    Html.RenderPartial("_AreaOption", child);
}
