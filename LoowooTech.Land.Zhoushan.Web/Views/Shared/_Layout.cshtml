        <script src="~/Scripts/html5shiv.min.js"></script>
        <script src="~/Scripts/respond.min.js"></script>
    <![endif]-->
</head>
<body class="layout-content">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header">
            <a href="#/" class="navbar-brand">舟山国土资源局统计季报</a>
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Administrator <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">修改密码</a></li>
                        <li><a href="#">退出</a></li>
                    </ul>
                </li>
            </ul>

        </div>
    </div>
    <div class="sidebar sidebar-light" id="sidebar">
        <div class="sidebar-heading"><i class="glyphicon glyphicon-cog"></i> 系统管理</div>
        <ul class="sidebar-menu">
            <li>
                <a href="#/user/">
                    <i class="glyphicon glyphicon-user"></i> 用户管理
                </a>
            </li>
            <li>
                <a href="#/form/">
                    <i class="glyphicon glyphicon-list-alt"></i> 表单管理
                </a>
            </li>
            <li>
                <a href="#/area/">
                    <i class="glyphicon glyphicon-map-marker"></i> 地区管理
                </a>
            </li>
            <li>
                <a href="#/valuetype/">
                    <i class="glyphicon glyphicon-book"></i> 数值类型管理
                </a>
            </li>
        </ul>
        <div class="sidebar-heading"><i class="glyphicon glyphicon-stats"></i> 报表管理</div>
        <ul class="sidebar-menu">
            <li>
                <a href="#/form">
                    <i class="glyphicon glyphicon-edit"></i> 填报数据
                </a>
            </li>
        </ul>
    </div>
    <div id="main">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
    <div id="modal" class="modal fade" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            </div>
        </div>
    </div>
</body>
</html>
<script>
    $(document).ready(function () {
        //弹窗
        $('#modal').on('hidden.bs.modal', function () {
            $(this).removeData('bs.modal');
        });

        //菜单折叠
        $("#sidebar a").click(function () {
            $("#sidebar li").removeClass("active");
            var parent = $(this).parent();
            parent.addClass("active");
        });

        $(window).on('hashchange', function () {
            $.loadMain(window.location.hash);
        });

        $.loadMain(window.location.hash);

        $(document).on("click", "a", function () {
            var targetId = $(this).attr("data-target");
            var href = $(this).attr("href");
            //如果是弹窗放行
            if (targetId == "#modal") {
                return;
            }
            //如果是删除，执行删除询问
            if (targetId == "#delete") {
                if (confirm("你确定要删除该记录吗？")) {
                    $.request(href);
                }
                return false;
            }

            if (targetId == "#main") {
                $.loadMain(href);
                return false;
            }

            //如果指定了targetId，则刷新targetId内容
            if (targetId) {
                var target = $(targetId);
                target.attr("href", href).html("load...");
                target.load(href, function (response, status, xhr) {
                    if (status == "error") {
                        target.html("程序出错了");
                    }
                });
                return false;
            }
        });
    });
</script>