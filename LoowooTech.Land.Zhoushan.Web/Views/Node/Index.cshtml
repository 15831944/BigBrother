
@{
    Form form = ViewBag.Form;
    List<Node> list = ViewBag.Nodes;

    ViewBag.Title = "分类管理 - " + form.Name;
}
<h2 class="page-header">
    @(ViewBag.Title)
    <a class="btn btn-success" href="/node/edit?formId=@(form.ID)" data-toggle="modal" data-target="#modal">
        <i class="glyphicon glyphicon-plus"></i>添加分类
    </a>
    <a class="btn btn-default" href="/form">
        <i class="fa fa-chevron-left"></i> 返回
    </a>
</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th style="width:60px;">ID</th>
            <th>分类名称</th>
            <th>分组名称</th>
            <th style="width:120px;">子分类管理</th>
            <th style="width:200px;">操作</th>
        </tr>
    </thead>
    @foreach (var node in list)
    {
        Html.RenderPartial("_NodeListItem", node);
    }
</table>