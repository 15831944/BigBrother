@{
    ViewBag.Title = "";

}
<form id="form-pdf" action="/Archive/Import" method="post" class="form-horizontal" enctype="multipart/form-data">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><i class="glyphicon glyphicon-plus"></i>统计册子上传</h4>
    </div>
    <div class="modal-body">
        <div class="alert alert-warning" role="alert" id="alert-pdf">
            <span></span>
        </div>
        <div class="form-group">
            <label for="" class="control-label col-md-3">选择年份</label>
            <div class="col-md-8">
                @Html.Partial("_YearDropdown")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">选择季度</label>
            <div class="col-md-8">
                @Html.Partial("_QuarterDropdown")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">文件：</label>
            <div class="col-md-8">
                <input type="file" name="file" class="form-control" id="filepdf" />
                <span class="help-block" id="span-pdf"></span>
                <input type="hidden" name="filePath" id="hide-pdf" />
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="col-md-8 col-md-offset-3">
            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i>确定</button>
        </div>
    </div>
</form>

<script>
    $("#alert-pdf").hide();
    $(function () {
        $("#filepdf").setUpload("/Archive/Upload", function (json) {
            $("#hide-pdf").val(json.data.filePath);
            $("#span-pdf").text(json.data.filePath);
        });

        $("#form-pdf").submit(function () {
            var enctype = $(this).attr("enctype");
            if (enctype == "multipart/form-data") {
                return;
            }
            var data = $(this).serialize();
            $.request("/Archive/Import", data, function (json) {
                if (json.result == 0) {
                    $("#alert-pdf>span").html(json.message);
                } else {
                    $("#alert-pdf>span").html("导入成功！");
                }
               
                $("#alert-pdf").show(500);
            });
            return false;
        });

    })
</script>
