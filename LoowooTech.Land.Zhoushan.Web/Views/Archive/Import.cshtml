}
<form id="form-pdf" action="/Archive/Import" method="post" class="form-horizontal" enctype="multipart/form-data">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><i class="glyphicon glyphicon-plus"></i>调控档案上传</h4>
    </div>
    <div class="modal-body">
        <div class="alert alert-warning" role="alert" id="alert-pdf">
            <span></span>
        </div>
        <div class="form-group">
            <label for="" class="control-label col-md-3">选择年份</label>
            <div class="col-md-8">
                @Html.Partial("_YearDropdown")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">选择季度</label>
            <div class="col-md-8">
                @Html.Partial("_QuarterDropdown")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">文件：</label>
            <div class="col-md-8">
                <button type="button" class="btn btn-primary btn-sm" name="AddFile"><i class="fa fa-file"></i>添加文件</button>
                <div id="File-List">
                    <input type="file" name="file" class="form-control" id="filepdf" />
                    <span class="help-block" id="span-pdf"></span>
                    <input type="hidden" name="filePath" id="hide-pdf" />
