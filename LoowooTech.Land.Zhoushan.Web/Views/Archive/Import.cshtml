<div class="hide">
    <div id="file">
        <div class="input-group" style="margin:2px;">
            <input type="file" name="file" class="form-control" />
            <input type="hidden" name="filePath" class="form-control" />
            <span class="input-group-btn">
                <button type="button" class="btn btn-danger btn-remove"><i class="glyphicon glyphicon-remove-circle"></i></button>
            </span>
        </div>
        <span class="help-block"></span>
    </div>
   
</div>

<script>
    $("#alert-pdf").hide();
    var fileHtml = $("#file").html();
    $(function () {

        $("button[name='AddFile']").click(function () {
            $("#File-List").append(fileHtml);
            $(".input-group-btn>.btn-remove").unbind("click").bind("click", function () {
                $(this).parent().parent().remove();
            });

            $(".input-group>input[name='file']").setUpload("/Archive/Upload", function (json) {
                $(this).next("input[name='filePath']").val(json.data.filePath);
                $(this).next(".help-block").text(json.data.filePath);
            });
        });


        $("#filepdf").setUpload("/Archive/Upload", function (json) {
            $("#hide-pdf").val(json.data.filePath);
            $("#span-pdf").text(json.data.filePath);
        });

        $("#form-pdf").submit(function () {
            var enctype = $(this).attr("enctype");
            if (enctype == "multipart/form-data") {
                return;
            }
            var data = $(this).serialize();
            $.request("/Archive/Import", data, function (json) {
                if (json.result == 0) {
                    $("#alert-pdf>span").html(json.message);
                } else {
                    $("#alert-pdf>span").html("导入成功！");
                }
               
                $("#alert-pdf").show(500);
            });
            return false;
        });

    })
</script>
