@{
    List<Node> list = ViewBag.Nodes;
    <select name="NodeId" class="form-control">
        @if (list.Count > 1)
        {
            <option value="0">请选择一个分类</option>
        }
        @foreach (var node in list)
        {
            Html.RenderPartial("_NodeOption", node);
        }
    </select>
}

